{
  "extends": "@tsconfig/svelte/tsconfig.json",
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "resolveJsonModule": true,
    "allowJs": true,
    "checkJs": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "baseUrl": ".",
    "paths": {
      "$gen/*": ["../gen/ui/*"],
      "@skeletonlabs/skeleton": ["./node_modules/@skeletonlabs/skeleton"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.svelte", "../gen/ui/**/*.ts", "../gen/ui/**/*.svelte"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
